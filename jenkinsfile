pipeline {
agent any

tools{
maven 'Maven'

}
stages{
stage('stahe1'){
steps{
  echo 'stage1: Checkout SCM'  
   checkout scm
    }
}
stage('stage2: Maven Build'){
 steps{
echo 'stage2: Maven Build'
sh 'mvn clean package -DskipTests'
}
}
stage('stage3: Docker build'){
steps{
sh 'docker build .'
}
}
  }
}
